<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.thika.metawear"
	    versionCode="2" 
        version   = "1.0.1"
		package="com.thika.metawear"
		>
    <name>MetaWear</name>
	<icon src="logo.jpg" />



 <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="18" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
<preference name="target-device" value="handset" /> 

	<preference name="phonegap-version" value="cli-5.2.0" /> 
<!--	<preference name="orientation" value="landscape" />-->
	<preference name="orientation" value="portrait" />

	<preference name="webviewbounce" value="false" />  
	<preference name="DisallowOverscroll" value="true" />
	<preference name="fullscreen" value="true" />
	<description>
 Metawear
    </description>
	

    <author href="http://thika.com" email="uabashidze@gmail.com">
        Cyb Mcloud
    </author>

 <gap:platform name="ios" />
<gap:platform name="android" />

 
    <plugins>

    </plugins>



	<feature name="App">
	  <param name="android-package" value="com.designge.theedwebcam"/>
	</feature>
	<feature name="InAppBrowser">
		<param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
	</feature>
  <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
 <feature name='MWDevice'>
        <param name='android-package' value='com.mbientlab.metawear.cordova.MWDevice'/>
      </feature>

<!--<feature name="BLE"><param name="android-package" value="com.megster.cordova.ble.central.BLECentralPlugin" /></feature>-->

<gap:plugin name="cordova-plugin-whitelist"  source="npm"  />

<gap:plugin name="cordova-plugin-ble-central"  source="npm" />

<gap:plugin name="com.mbientlab.metawear.cordova"   />





<feature name="Insomnia">
  <param name="android-package" value="nl.xservices.plugins.Insomnia" />
</feature>
<gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />

</widget>
